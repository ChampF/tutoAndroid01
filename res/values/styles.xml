<resources>

    <style name="WindowTitleBackground">
        <item name="android:background">@drawable/header_background</item>
    </style>

    <style name="TitleLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:src">@drawable/tuto01_logo</item>
    </style>

    <style name="customLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/layout_border</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/layout_bottom_margin</item>
        <item name="android:paddingLeft">@dimen/layout_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/layout_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/layout_top_margin</item>
    </style>

    <style name="custom.TextEdit" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin</item>
        <item name="android:background">@drawable/custom_text_edit</item>
        <item name="android:ems">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textColorHighlight">@color/grey</item>
        <item name="android:textColorHint">@color/darkGrey</item>
    </style>

    <style name="custom.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:paddingLeft">@dimen/widget_padding</item>
        <item name="android:paddingRight">@dimen/widget_padding</item>
        <item name="android:paddingBottom">@dimen/widget_padding</item>
        <item name="android:paddingTop">@dimen/widget_padding</item>
        <item name="android:layout_marginBottom">@dimen/widget_margin</item>
        <item name="android:layout_marginTop">@dimen/widget_margin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

</resources>
